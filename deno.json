{
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update .",
    "db": "deno run -A --env db.ts",
    "migrate:push": "deno run -A --env npm:drizzle-kit push --config=drizzle.config.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "nodeModulesDir": "auto",
  "imports": {
    "@/": "./",
    "drizzle-kit": "npm:drizzle-kit@^0.28.1",
    "drizzle-orm": "npm:drizzle-orm@0.36.3",
    "drizzle-orm/libsql": "npm:drizzle-orm@0.36.3/libsql",
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.25",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
    "preact": "npm:preact@^10.24.3",
    "@preact/signals": "npm:@preact/signals@^1.3.0",
    "tailwindcss": "npm:tailwindcss@3.4.3",
    "tailwindcss/plugin": "npm:tailwindcss@3.4.3/plugin.js",
    "@trpc/server": "npm:@trpc/server@10.45.1",
    "@trpc/client": "npm:@trpc/client@10.45.1",
    "zod": "npm:zod@3.22.4",
    "@libsql/client": "npm:@libsql/client@0.3.6"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head"
    ]
  }
}
